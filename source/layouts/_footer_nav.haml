%nav.footer-nav
  %ul.footer-nav__menus

    %li.footer-nav-menu
      %h2.footer-nav-menu__title.is-lobster entry
      - blog.articles[0...10].each do |article|
        %ul.footer-nav-menu__items
          %li.footer-nav-menu__item
            %date.footer-nav-menu__item-time= article.date.strftime('%Y/%m/%d')
            = link_to(article.title, article, class: "footer-nav-menu__item-link")

    %li.footer-nav-menu
      %h2.footer-nav-menu__title.is-lobster tag
      - blog.tags.each do |tag, articles|
        %ul.footer-nav-menu__items
          %li.footer-nav-menu__item
            = link_to( "#{tag} (#{articles.size})", tag_path(tag), class: "footer-nav-menu__item-link")

    %li.footer-nav-menu
      %h2.footer-nav-menu__title.is-lobster year
      - blog.articles.group_by {|a| a.date.year }.each do |year, articles|
        %ul.footer-nav-menu__items
          %li.footer-nav-menu__item
            = link_to("#{year} (#{articles.size})", blog_year_path(year), class: "footer-nav-menu__item-link")
