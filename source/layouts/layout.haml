!!!
%html
  %head
    %meta{charset: "utf-8"}
    %meta{content: "IE=edge;chrome=1", "http-equiv" => "X-UA-Compatible"}
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}
    %title
      morikoblog#{' - ' + current_article.title unless current_article.nil?}
    = feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed"
    = javascript_include_tag  "//ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"
    = javascript_include_tag "application"
    = stylesheet_link_tag "application"
    = stylesheet_link_tag "highlight"
    = favicon_tag "images/favicon.ico"
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-62294314-1', 'auto');
      ga('send', 'pageview');

  %body{class: page_classes}
    = partial "layouts/header"
    = partial "layouts/global_nav"
    %main.main
      - if current_article
        -# ここはブログの記事個別
        %article.blog-article
          %time.blog-article__time= current_article.date.strftime('%Y/%m/%d')
          %h1.blog-article__title
            = link_to(current_article.title, current_article, class: "blog-article__link")
          .content
            = yield
      - elsif page?
        -# ここはページ（/pages/hoge.html）
        %article.page
          %h1.page__title= current_page.data.title
          .content
            = yield
      - else
        -# ここはブログの記事一覧（TOPページ含む）
        .page
          %h1.page__title= current_page.data.title
          .content
            = yield

    %footer.footer
      = partial 'layouts/footer_nav'
      %small.footer__author
        Copyright©
        = link_to( "@#{data.site.twitter_id}", "https://twitter.com/#{data.site.twitter_id}/", target: "_blank", class: "white-link" )
        2015 All Rights Reserved.
